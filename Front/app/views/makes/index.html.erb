<p id="notice"><%= notice %></p>

<h1>Makes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Description</th>
      <th>Activo</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @makes.each do |make| %>
      <tr>
        <td><%= make.nombre %></td>
        <td><%= make.description %></td>
        <td><%= make.activo %></td>
        <td><%= make.category_id %></td>
        <td class="active"><%= link_to 'Show', make %></td>
        <td class="success"><%= link_to 'Edit', edit_make_path(make) %></td>
        <td class="danger"><%= link_to 'Destroy', make, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

