<p id="notice"></p>

<h1>Services</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Description</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.nombre %></td>
        <td><%= service.description %></td>
        <td><%= service.activo %></td>
        <td class="active"><%= link_to 'Show', service %></td>
        <td class="success"><%= link_to 'Edit', edit_service_path(service) %></td>
        <td class="danger"><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

