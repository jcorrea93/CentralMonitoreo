<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Description</th>
      <th>Activo</th>
      <th>Service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nombre %></td>
        <td><%= category.description %></td>
        <td><%= category.activo %></td>
        <td><%= category.service_id %></td>
        <td class="active"><%= link_to 'Show', category %></td>
        <td class="success"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td class="danger"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

