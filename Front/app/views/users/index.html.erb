<p id="notice"><%= notice %></p>


<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>User name</th>
      <th>Email</th>
      
      <th>Birth date</th>
      <th>Status</th>
      <th>Avatar url</th>
      <th>Phone</th>
      <th>Identification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        
        <td><%= user.birth_date %></td>
        <td><%= user.status %></td>
        <td><%= user.avatar_url %></td>
        <td><%= user.phone %></td>
        <td><%= user.identification %></td>
        <td class="active"><%= link_to 'Show', user %></td>
        <td class="success"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

